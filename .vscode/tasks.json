{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build with GCC 11.1.0",
      "command": "/usr/bin/g++-11",
      "args": [
        "-g",
        "-std=c++20",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/g++-11"
    },
    {
      "type": "cppbuild",
      "label": "Build with clang 10.0.0",
      "command": "/usr/bin/clang++-10",
      "args": [
        "-g",
        "-std=c++20",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /usr/bin/clang++-10"
    }
  ]
}
